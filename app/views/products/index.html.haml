%h1 Listing products

%table
  %thead
    %tr
      %th
        Product Name
      %th
        Sku Count
      %th



  %tbody
    - @products.each do |product|
      %tr
        %td
          = product.name
        %td
          = product.skus.count
        %td
          = link_to 'Show', product, class: "button"
          = link_to 'Edit', edit_product_path(product), class: "button"
          = link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "button"

%br

= link_to 'New Product', new_product_path
